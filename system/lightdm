#!/bin/bash -eu
. `dirname $0`/../library/script

conf_path=/etc/lightdm/lightdm.conf
greeter_path=/etc/lightdm/lightdm-gtk-greeter.conf
backdrop_path=/usr/share/xfce4/backdrops/xubuntu-quantal.png
setup_cmd="bash -c \"DISPLAY=:0; XAUTHORITY=/var/run/lightdm/root/:0; synclient TapButton{1..3}=0 && syndaemon -dtKR -i0.5\""

# disable autologin
name=autologin-user
sudo perl -0777 -pe "s/\n$name=.+\n/\n/" -i $conf_path
! pcregrep "^$name=.+$" $conf_path

# configure touchpad on greeter
name=greeter-setup-script
if ! pcregrep -q "^$name=" $conf_path; then
  echo "$name=$setup_cmd" | sudo tee -a $conf_path 1>/dev/null
else
  sudo perl -pe "s|^($name)=.*|\1=$setup_cmd|" -i $conf_path
fi
pcregrep -q "^$name=$setup_cmd$" $conf_path

# fix the path to background referenced to Xubuntu plymouth background
name=background
sudo perl -pe "s|^($name)=.+$|\1=$backdrop_path|" -i $greeter_path
pcregrep -q "^$name=$backdrop_path$" $greeter_path

