#!/bin/bash -eu
. `dirname $0`/../library/script

toolchain_url=http://www.treewalker.org/opendingux/opendingux-toolchain.2012-06-16.tar.bz2
toolchain_md5=97adec736b4dc08d0c0930d8400a9e76
toolchain_dir=/opt/opendingux-toolchain

if [[ ! -d $toolchain_dir ]]; then
  # download and unpack OpenDingux toolchain
  download $toolchain_url $toolchain_md5
  unpack-downloaded $toolchain_url
  
  # move toolchain to /opt and change owner
  move ./opendingux-toolchain $toolchain_dir
fi

